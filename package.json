{
  "name": "sparcclen",
  "version": "1.0.0",
  "description": "Sparcclen - Initiate the impossible",
  "author": "Mohammed Hesham <mohamedhms3102@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "vite",
    "react",
    "typescript"
  ],
  "scripts": {
    "dev": "concurrently --raw -k --success first \"npm run dev:web --silent\" \"npm run dev:electron --silent\"",
    "dev:electron": "wait-on http://127.0.0.1:5175 && npm run electron:dev --silent",
    "dev:debug": "cross-env ELECTRON_OPEN_DEVTOOLS=true npm run dev",
    "dev:clean": "concurrently --kill-others --silent \"npm run dev:web --silent\" \"npm run dev:electron --silent\"",
    "cleanup": "taskkill /f /im node.exe /t 2>nul || taskkill /f /im electron.exe /t 2>nul || echo No processes to clean",
    "dev:web": "vite --port 5175",
    "start:electron": "npm run electron:dev",
    "electron:dev": "cross-env NODE_NO_WARNINGS=1 VITE_DEV_SERVER_URL=http://127.0.0.1:5175 electron ./electron/main/dev-entry.cjs",
    "preload:build": "node electron/preload/build-preload.cjs",
    "preload:watch": "node electron/preload/build-preload.cjs --watch",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "npm run check:components && eslint -c eslint.config.mjs \"src/**/*.{ts,tsx}\"",
    "lint:fix": "npm run sort:components && eslint -c eslint.config.mjs \"src/**/*.{ts,tsx}\" --fix",
    "check:components": "node electron/main/tools/sort-indexes.mjs --check",
    "sort:components": "node electron/main/tools/sort-indexes.mjs",
    "mirror:supabase-to-src": "node scripts/mirror-supabase-to-src.js",
    "mirror:src-to-supabase": "node scripts/mirror-src-to-supabase.js"
  },
  "main": "electron/main/dev-entry.cjs",
  "homepage": "./",
  "build": {
    "appId": "com.sparcclen.app",
    "productName": "Sparcclen",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/main",
      "electron/preload",
      "dist-electron"
    ],
    "win": {
      "icon": "src/public/Logo.ico",
      "target": "nsis",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "icon": "src/public/Logo.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "src/public/Logo.png",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@simplewebauthn/browser": "^10.0.0",
    "@supabase/supabase-js": "^2.75.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-easy-crop": "^5.5.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@types/node": "^22.18.8",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^38.2.2",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.10",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^4.3.2",
    "wait-on": "^8.0.0"
  }
}
